package variaveis;

import javax.swing.JOptionPane;

public class Entrada {

	public static void main(String[] args) {
		 // classe JOptionPane representa a tela de imput.
		// showInputDialog é um método
		
		// Tipo referencia : quando o tipo se refere a uma classe
		String nome = JOptionPane.showInputDialog("Digite seu nome:");
		// tipo primitivo começa com letra minuscula, já pertence a liguagem. Ex: int
		// tipo primitivo precisa de apoio. Esse apoio vem das classes "Wrappers"
		// int = integer
		// double = Double
		
		int idade = JOptionPane.showInputDialog("Digite a idade:");
		double altura = 1.57;
		double peso = 59.00;
		
		
		System.out.println ("Nome: " + nome);
		System.out.println ("Idade: " + idade + " anos");
		System.out.println("Altura: " + altura + " metros");	
		System.out.println("Peso: " + peso + " kilos");
		
		
		double imc = peso / (altura * altura);
		
		// /n é um quebra linha
		// No printf() usamos:
		// %s => para String
		// %f => para números reais
		// %d => para números inteiros
		System.out.printf ("IMC calculado: %.2f\n\n" , imc);
		System.out.printf ("%s seu imc é: %.2f\n", nome, imc);
	
	
	
	
	} // fechando método
	

} // fechando classe
