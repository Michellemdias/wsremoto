package repeticao;

import javax.swing.JOptionPane;

public class DesafioWhile {

	public static void main(String[] args) {
		// pedir dia mes e ano em variaveis separadas
		// ano precisa ser maior que 1900 e menor que 2002
		// mes deve estar entre 1 e 12
		// dia entre 1 e 31 dependendo do mes

		short ano = Short.parseShort(JOptionPane.showInputDialog("Digite o ano"));

		while (ano <= 1900 || ano >= 2002) {
			ano = Short.parseShort(JOptionPane.showInputDialog("Digite um ano válido"));
		}

		byte mes = Byte.parseByte(JOptionPane.showInputDialog("Digite o mês"));

		while ( mes < 1 || mes > 12) {
			ano = Byte.parseByte(JOptionPane.showInputDialog("Digite um mês válido"));
		}

		byte dia = Byte.parseByte(JOptionPane.showInputDialog("Digite o dia"));

		
		while (dia > 31) {
			dia = Byte.parseByte(JOptionPane.showInputDialog("Digite um dia válido"));

		} 
		
				
		System.out.println("dia " + dia + " mes " + mes + " ano " + ano );


	}

}
