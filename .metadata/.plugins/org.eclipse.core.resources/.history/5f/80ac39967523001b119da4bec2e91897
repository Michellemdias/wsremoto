package decisao;

import javax.swing.JOptionPane;

public class Exercicio1 {

	public static void main(String[] args) {
		// 1. Elabore uma aplicação que leia o valor de dois números inteiros e a operação aritmética desejada (+, -, * ou /);
		//calcule, então, a resposta adequada.
		//Se optar por uma divisão, leve em consideração que não podemos ter um número dividido por zero.

		int numero1 = Integer.parseInt(JOptionPane.showInputDialog("Digite o número 1:")) ;
		int numero2 = Integer.parseInt(JOptionPane.showInputDialog("Digite o número 2:")) ;
		String operacao = JOptionPane.showInputDialog("Digite a operação desejada:").toUpperCase();

		if (operacao == "+") {
			System.out.println("A soma é: " + (numero1+numero2));
		} else if (operacao == "-") {
			System.out.println("A subtração é: " + (numero1-numero2));
		} else if (operacao == "*") {
			System.out.println("A multiplicação é: " + (numero1*numero2));
		} else if  (numero2 != 0) {
			System.out.println("A divisão é: " + (numero1/numero2));
		} 



	}

}
